<div class="rounded-l-lg bg-neutral grow flex">
  <div class="self-center flex gap-8 p-8">
    <div class="w-36 h-36 rounded-l-[4.5rem] rounded-tr-[4.5rem] rounded-br-2xl border-8 border-secondary shrink-0 truncate">
      {{#if image}}
        <img src="{{image}}" alt="profile-pic">
      {{/if}}
    </div>
    <div class="grow">
      <h1 class="text-primary text-4xl">{{name}}</h1>
      <h2 class="text-secondary text-2xl">{{label}}</h2>
      <p class="text-justify">{{summary}}</p>
    </div>
  </div>
</div>